{# Main #}
{% block main %}
  <div role="main" id="container" class="wrapper row main-container {{ container }} js-quickedit-main-content">

    <section id="navContainer" class="mobileOffscreen">
      <nav class="navbar navbar-default" role="navigation">
        <div id="navigation">
            <ul class="nav navbar-nav">
              {% for item in nav_items %}
              <li>
                  <a id="nav_link{{index}}" href="{{item.url}}" title="{{item.title}}" class="{{item.class}}">{{item.title}}</a>
              </li>
              {% endfor %}
            </ul>
        </div>
    </nav>
    </section>
    
    {# Content #}
    {%
        set content_classes = node is not empty and node.getType() == 'landing_page' ? 'section-landing'
      %}
    <div id="content" class="row {{ content_classes }}">
      {# Header #}
      {% if page.header %}
        {% block header %}
          <div class="col-sm-12" role="heading">
            {{ page.header }}
          </div>
        {% endblock %}
      {% endif %}

      {# Content #}
      {%
        set content_classes = [
          'inner-content',
          page.sidebar_second and node.field_article_layout.value != 3 ? 'col-xs-9',
          (page.sidebar_first is empty and page.sidebar_second is empty) or node.field_article_layout.value == 3 or (node.field_article_layout.value == 2 and node.field_include_donate.value != '1')  ? 'col-lg-12'
        ]
      %}
      <section{{ content_attributes.addClass(content_classes) }}>

        {# Highlighted #}
        {% if page.highlighted %}
          {% block highlighted %}
            {{ page.highlighted }}
          {% endblock %}
        {% endif %}

        {# Action Links #}
        {% if action_links %}
          {% block action_links %}
            <ul class="action-links">{{ action_links }}</ul>
          {% endblock %}
        {% endif %}

        {# Help #}
        {% if page.help %}
          {% block help %}
            {{ page.help }}
          {% endblock %}
        {% endif %}
        
        {# Sidebar First #}
        {% if page.sidebar_first %}
          {% block sidebar_first %}
            <div id="leftnavContainer" class="col-lg-4" role="complementary">
              {{ page.sidebar_first }}
            </div>
          {% endblock %}
        {% endif %}
        
        <section id="mainContent">
          {# Content #}
          {% block content %}
            <a id="main-content"></a>
            
            {% if node.getType() == 'landing_page' or node.getType() == 'page' %}
            <div id="utility">
              <div class="utilityContainer">
                  <a href="?p=1" target=_blank class="print" style="float:left;margin:0px;padding-right:2px;">
                      <span class="offscreen">
                        <label ID="titlePrint">Print</label>
                      </span>
                      <img src="/themes/custom/alzheimer/images/printButton.png" alt="" width="20" height="20"/>
                  </a>    <!-- todo: Hook up this link -->

                    <div class="addthis_toolbox addthis_default_style addthis_20x20_style" style="display:inline-block;width:120px;">
                          <a class="addthis_button_preferred_1"></a>
                          <a class="addthis_button_preferred_2"></a>
                          <a class="addthis_button_preferred_3"></a>
                          <a class="addthis_button_preferred_4"></a>
                          <a class="addthis_button_more"></a>
                      </div>

                      <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-4ec51d9029d96f6c"></script>
                      {% if node.langcode == "fr" %}
                      <script type="text/javascript">
                          var addthis_config = 
                          {
                              ui_language: "fr",
                              services_exclude: "print,printfriendly,cleanprint"
                          }
                      </script>
                      {%  else %}
                      <script type="text/javascript">
                          var addthis_config =
                          {
                              services_exclude: "print,printfriendly,cleanprint"
                          }
                      </script>
                      {% endif %}
                  <!-- AddThis END -->
                 </div>
              </div>
            {% endif %}
            
            {% if title and node.getType() != 'article' and not is_group %}
              <h1 class="{{ title_classes }}">{{ title|raw }}</h1>
            {% endif %}

            {{ page.content }}
            {% if node.getType() == 'page' %}
              <span class="last-update">
                  {{ 'Last Updated'|t }}: {{ node.getChangedTime()|date("m/d/Y") }}
              </span>
              <div id="twocolumn_0_leftcolumn_0_pnlBackToTop" class="pnlBackToTop">
                  <p class="right">
                      <a href="#navigation">
                          {{ 'Back to top'|t }}↑
                      </a>
                  </p>
              </div>
            {% endif %}
          {% endblock %}
        </section>
      </section>

      {# Sidebar Second #}
      {% if page.sidebar_second %}
        {% block sidebar_second %}
          <section class="sidebar col-lg-3" role="complementary">
            {{ page.sidebar_second }}
          </section>
        {% endblock %}
      {% endif %}
    </div>
    
    {% block footer %}
      <footer id="footer" class="row">
        <div class="social">
          <span class="social-items" style="float:right;">
            {{ group.field_follow_html.value|raw }}
          </span>
          <span class="quick-links" style="float:left;" tabindex="0">
              {{ group.field_quick_links_header_text.value }}
              <i id="viewQuickLinks" class="fa fa-plus"></i>
              <span id="revealQuickLinks" tabindex="0"></span>
          </span>
        </div>
            <!-- end .social -->

        <div class="footer-links row">
            <ul class="footer-nav col-lg-9 mobileOffscreen">
                {{ quick_links_first|raw }}
                {{ quick_links_second|raw }}
                {{ quick_links_third|raw }}
            </ul>
             {{ group.field_contact_html.value|raw }}
        <!-- end .contact -->
            </div>
            
        {{ page.footer }}
        {{ extra_logos }}
     </footer>
    {% endblock %}
  </div>
  
  

{% endblock %}



