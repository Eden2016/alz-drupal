{#
/**
 * @file
 * Default theme implementation for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 *
 * @ingroup templates
 */
#}

{% if breadcrumb %}
  <nav class="breadcrumbs">
    {% for item in breadcrumb %}
        {% if item.url %}
          <a href="{{ item.url }}">{{ item.text|raw }}</a> &gt;
        {% else %}
          {{ item.text|striptags('<sup>')|raw }}
        {% endif %}
    {% endfor %}
  </nav>
{% endif %}
